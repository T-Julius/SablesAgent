# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@clustername.mongodb.net/database

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=30d

# Google API Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_API_KEY=your_google_api_key
GOOGLE_REDIRECT_URI=https://your-vercel-app.vercel.app/api/auth/google/callback

# Email Service
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_DEFAULT_SENDER=Zimbabwe Sables Rugby Team <takundac@gmail.com>

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="your_private_key_with_quotes_preserved"
FIREBASE_CLIENT_EMAIL=your_client_email@example.com

# Elasticsearch (optional if using cloud provider)
ELASTIC_URL=http://localhost:9200
ELASTIC_INDEX=rugby_documents

# Token Encryption (for secure token storage)
TOKEN_ENCRYPTION_KEY=32_character_hex_string_for_aes_256_cbc

# Webhook Secret (for Google Drive webhook validation)
WEBHOOK_SECRET_TOKEN=your_webhook_secret_token

# Service Account (if using service account auth)
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account_key.json

# Vercel-specific
VERCEL_URL=${VERCEL_URL}
